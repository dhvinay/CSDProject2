''  @param x    Tabellenindex
''  @param p    Polynom fuer die CRC-Berechnung
''  @return     Tabellenwert
''
Private Function CalcCRC16(x As Long, p As Long) As Long
    Dim k As Long
    For k = 0 To 7
        If ((x And 1&) > 0) Then
            Let x = (x \ 2) Xor p
        Else
            Let x = (x \ 2)
        End If
    Next k
    Let CalcCRC16 = x
End Function

''
''  Berechnung der CRC16 Checksumme
''
''  @param b    Zellbereich der berechnet werden soll
''  @return     MD5 Checksumme mit Anfangswert
''
Public Function SummeCRC16(ParamArray args() As Variant) As Variant
    
    Dim s As Long                       ' Summe
    Let s = 0
    Dim i As Long                       ' Increment
    Dim j As Long
    
    Dim arg As Variant
    Dim b As Range
    Dim z As Range
    Dim byteArray(8) As Byte
    Dim paramType As String
    Dim size As Variant
        
    For Each arg In args()
    For Each b In arg.Areas
    For Each z In b.Cells               ' fuer jede Zelle des Zellbereichs
        
        If Not IsEmpty(z.Value) Then
        
            Dim v As Variant
            Let v = z.Value             ' Inhalt der Zelle
        
            If Left(v, 2) = "0x" Then
                
                Mid(v, 1, 2) = "&H"     ' Praefix fuer Hexadezimalwert in VBA
            
            End If
            
            If IsNumeric(v) Then
            
                Dim x As Currency
                Let x = val(v)                                      'Wert der Zelle
                
                paramType = Cells(z.Row, 2).Value                   'get parameter type
                size = paramTypeLength(paramType)                   'get number of bytes
                
                Call paramToBytes(x, paramType, byteArray)
                 
                 
                j = 0
                While j < size
                
                    If (byteArray(j) >= 0) And (byteArray(j) <= 255) Then

                    ' Berechnung der CRC16 Checksumme
                    Let s = CalcCRC16((s Xor byteArray(j)) And &HFF&, CRC16Poly) Xor (s \ 256)
                                          
                    i = i + 1
                    j = j + 1
                    
                    Else
                    
                        Let SummeCRC16 = CVErr(xlErrValue)
                        Exit Function       ' #WERT! - kein gueltiger Wert
                    
                    End If
                    
                Wend
                           
            Else
        
                Let SummeCRC16 = CVErr(xlErrNum)
                Exit Function           ' #ZAHL! - kein numerischer Inhalt
            
            End If
        
        End If
        
    Next z
    Next b
    Next arg
    
    Let SummeCRC16 = s

End Function


